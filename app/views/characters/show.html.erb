
<img class='character-profile-image' src=<%=@character.fetch("image")%> alt="">
<h2 class='character-show-name'><%=@character.fetch("name")%></h2>

<h3 class='profile-header'>Bio</h3>
<p class='character-bio'><%=@character.fetch("bio")%></p>



<div class="section-1">
  <h3 class='profile-header'>Universe <%=@character.fetch("universe")%></h3>
  <h3 class='profile-header'>Height: <%=@character.fetch("height")%> cm</h3>
  <h3 class='profile-header'>Weight: <%=@character.fetch("weight")%> kg</h3>
  <h3 class='profile-header'><%=@character.fetch("race")%> Race</h3>
</div>

<div class="forms">
  <h3 class='profile-header'>Forms</h3>
  <ul>
    <div class="forms-content">
    <%@character.fetch("forms").each do |form|%>
<% if form != '' %>
    <li><%= form %></li>
    <% else %>
    <p class = 'blank-message'><%=@character.fetch("name")%> has no forms</p>
  <% end %>
    <%end%>
  </ul>
</div>

<div class="family">
  <h3 class='profile-header'>Family</h3>
  <ul>

    <%@character.fetch("family").each do |family|%>
    <% if family != '' %>
    <li><%= family %></li>
    <% else %>
      <p class = 'blank-message'><%=@character.fetch("name")%> has no family</p>
      <% end%>
    <%end%>
  </ul>
</div>





<div class="home-link">
<a href="/characters"><img src="https://i.imgur.com/9yOCfZ6.gif"></a>
<h3 id="home-text">Home</h3>
</div>
